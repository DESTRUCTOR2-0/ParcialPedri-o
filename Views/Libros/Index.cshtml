@model IEnumerable<ParcialPedriño.Models.Libros>

@{
    ViewBag.Title = "Nuevos Libros";
}

<h2>Catalogo de Libros</h2>

<p>
    @Html.ActionLink("Crear Nuevo Libro", "Create", null, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LibroId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duracion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.clasificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_publicacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LibroId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duracion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.clasificacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_publicacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaId)
        </td>
        <td class="table-danger">
            @Html.ActionLink("Editar", "Edit", new { id = item.LibroId }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.LibroId }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.LibroId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
